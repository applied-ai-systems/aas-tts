{
  "mcpServers": {
    "aas-tts-fastmcp": {
      "command": "uvx",
      "args": [
        "aas-tts", 
        "mcp", 
        "serve", 
        "--stdio",
        "--fastmcp"
      ],
      "description": "AAS-TTS FastMCP Server - Advanced Text-to-Speech capabilities",
      "capabilities": [
        "tools",
        "resources", 
        "prompts"
      ]
    },
    "aas-tts-legacy": {
      "command": "uvx",
      "args": [
        "aas-tts",
        "mcp", 
        "serve",
        "--stdio", 
        "--no-fastmcp"
      ],
      "description": "AAS-TTS Legacy MCP Server - Original MCP implementation",
      "capabilities": [
        "tools"
      ]
    }
  }
}
